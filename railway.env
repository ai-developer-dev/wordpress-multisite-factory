# Railway Production Environment Variables

# Database Configuration
WORDPRESS_DB_NAME=your_database_name
WORDPRESS_DB_USER=your_database_user
WORDPRESS_DB_PASSWORD=your_database_password
WORDPRESS_DB_HOST=your_database_host
WORDPRESS_DB_CHARSET=utf8mb4
WORDPRESS_TABLE_PREFIX=wp_

# WordPress URLs
WORDPRESS_HOME=https://your-app.railway.app
WORDPRESS_SITEURL=https://your-app.railway.app
WORDPRESS_DOMAIN=your-app.railway.app

# Security Keys (generate new ones)
WORDPRESS_AUTH_KEY=your-unique-phrase-here
WORDPRESS_SECURE_AUTH_KEY=your-unique-phrase-here
WORDPRESS_LOGGED_IN_KEY=your-unique-phrase-here
WORDPRESS_NONCE_KEY=your-unique-phrase-here
WORDPRESS_AUTH_SALT=your-unique-phrase-here
WORDPRESS_SECURE_AUTH_SALT=your-unique-phrase-here
WORDPRESS_LOGGED_IN_SALT=your-unique-phrase-here
WORDPRESS_NONCE_SALT=your-unique-phrase-here

# Performance
WORDPRESS_DEBUG=false
WORDPRESS_DEBUG_LOG=false
WORDPRESS_DEBUG_DISPLAY=false
WORDPRESS_MEMORY_LIMIT=256M
WORDPRESS_MAX_MEMORY_LIMIT=512M

# Site Factory
SITE_FACTORY_TOKEN=your_secure_token_here
SITE_FACTORY_RATE_LIMIT=10
SITE_FACTORY_RATE_WINDOW=3600

# Multisite Configuration
MULTISITE=true
SUBDOMAIN_INSTALL=true
DOMAIN_CURRENT_SITE=${RAILWAY_STATIC_URL}

# Security
DISALLOW_FILE_EDIT=true
DISALLOW_FILE_MODS=false
AUTOMATIC_UPDATER_DISABLED=false

# Performance
WP_CACHE=true
WP_REDIS_HOST=${REDIS_URL}
WP_REDIS_PORT=6379
WP_REDIS_DATABASE=0
