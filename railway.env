# Railway Production Environment Variables

# WordPress Database (Railway will provide these)
WORDPRESS_DB_HOST=${DATABASE_URL}
WORDPRESS_DB_NAME=${DATABASE_NAME}
WORDPRESS_DB_USER=${DATABASE_USER}
WORDPRESS_DB_PASSWORD=${DATABASE_PASSWORD}

# WordPress Configuration
WORDPRESS_DEBUG=false
WORDPRESS_CONFIG_EXTRA="
define('WP_MEMORY_LIMIT', '256M');
define('WP_MAX_MEMORY_LIMIT', '256M');
define('FORCE_SSL_ADMIN', true);
define('FORCE_SSL_LOGIN', true);
"

# Site Factory Configuration
SITE_FACTORY_TOKEN=${SITE_FACTORY_TOKEN}
SITE_FACTORY_RATE_LIMIT=10
SITE_FACTORY_RATE_WINDOW=3600

# Multisite Configuration
MULTISITE=true
SUBDOMAIN_INSTALL=true
DOMAIN_CURRENT_SITE=${RAILWAY_STATIC_URL}

# Security
DISALLOW_FILE_EDIT=true
DISALLOW_FILE_MODS=false
AUTOMATIC_UPDATER_DISABLED=false

# Performance
WP_CACHE=true
WP_REDIS_HOST=${REDIS_URL}
WP_REDIS_PORT=6379
WP_REDIS_DATABASE=0
